{% extends 'back.html.twig' %}

{% block title %}Modifier cours{% endblock %}

{% block body %}
    <div class="card-body">

        <h4 class="card-title">Modifier cours</h4>
        {{ form_start(form, {'attr': {'class': 'forms-sample'}}) }}
        {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
        <div class="form-group">
            <label for="exampleInputNomcours">Nom cours</label>
            {{ form_widget(form.nomcours, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            <label for="exampleInputDescriptioncours">Description cours</label>
            {{ form_widget(form.descriptioncours, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            <label for="exampleInputFormation">Formation</label>
            {{ form_widget(form.formation, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            <label for="exampleInputFilecours">Fichier Cours</label>
            {{ form_widget(form.filecours, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <input type="submit" value="Enregistrer" class="btn btn-success"/>


        {{ form_end(form) }}
    </div>
    <a href="{{ path('cours_index') }}" class="btn btn-success">Retour</a>
    {{ include('cours/_delete_form.html.twig') }}


{% endblock %}