{% extends 'back.html.twig' %}

{% block title %}List User{% endblock %}
{% block body %}
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Email</th>
                        <th>Nom</th>
                        <th>Prenom</th>

                    </tr>
                    <tbody>
                    {% for user in users %}
                        {% for r in user.roles %}
                            {% if r == 'ROLE_ETUDIANT'  %}
                                <tr>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.nom }}</td>
                                    <td>{{ user.prenom }}</td>
                                </tr>
                            {% else %}
                            {% endif %}
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}