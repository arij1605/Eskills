{% extends 'front.html.twig' %}


{% block body %}

    <div class="section layout_padding">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="full">
                        <div class="heading_main text_align_center">
                            <h2> Mes Evenements</h2>
                        </div>
                    </div>
                </div>
                {% for f in favoris %}
                    <div class="col-md-4">
                        <div class="full blog_img_popular">
                            <img class="img-responsive" src="{{ asset('Upload/evenement/')}}{{ f.idEvenement.imageName }}" alt="#" />
                            <a href="{{ path('evenement_byId', {'id': f.idEvenement.idEvent}) }}"> <h4>{{ f.idEvenement.titre }}</h4> </a>
                            <a href="{{ path('favoris_delete', {'id': f.id}) }}" class="btn btn-primary">Delete</a>

                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>

{% endblock %}